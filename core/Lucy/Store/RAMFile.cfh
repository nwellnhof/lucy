parcel Lucy;

/** Backing storage used by RAMFolder and RAMFileHandle.
 */
class Lucy::Store::RAMFile inherits Clownfish::Obj {

    ByteBuf  *contents;
    uint32_t  num_shared_locks;
    bool      exclusive_lock;
    bool      read_only;

    inert incremented RAMFile*
    new(ByteBuf *contents = NULL, bool read_only = false);

    /**
     * @param contents Existing file contents, if any.
     * @param read_only Indicate that the file contents may not be modified.
     */
    inert RAMFile*
    init(RAMFile *self, ByteBuf *contents = NULL, bool read_only = false);

    /** Accessor for the file's contents.
     */
    ByteBuf*
    Get_Contents(RAMFile *self);

    /** Accessor for `read_only` property.
     */
    bool
    Read_Only(RAMFile *self);

    /** Set the object's `read_only` property.
     */
    void
    Set_Read_Only(RAMFile *self, bool read_only);

    /** Add a shared lock.
     *
     * @return true on success, false on failure.
     */
    bool
    Add_Shared_Lock(RAMFile *self);

    /** Add an exclusive lock.
     *
     * @return true on success, false on failure.
     */
    bool
    Add_Exclusive_Lock(RAMFile *self);

    /** Remove a shared lock.
     */
    void
    Remove_Shared_Lock(RAMFile *self);

    /** Remove an exclusive lock.
     */
    void
    Remove_Exclusive_Lock(RAMFile *self);

    public void
    Destroy(RAMFile *self);
}


